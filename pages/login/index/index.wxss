image {
	position: fixed;
	width: 100%;
	height: 100%;
}

.login {
	position: fixed;
	left: 50%;
	top: 293rpx;
	transform: translateX(-50%);
	width: 558rpx;
	height: 293rpx;
	color: #000000;
	background: white;
	border-radius: 12rpx;
}
.login .title {
	padding: 46rpx 94rpx 0;
	line-height: 52rpx;
	text-align: center;
	height: 146rpx;
	font-size: 32rpx;
	letter-spacing: 3rpx;
	border-bottom: 1px solid #d0d1d3;
}
.login .tool {
	display: flex;
	align-items: center;
	height: 100rpx;
}
.login .tool button {
	flex: 1;
	line-height: 100rpx;
	text-align: center;
	height: 100%;
	font-size: 32rpx;
	background: white;
}
.login .tool button:first-child {
	border-radius: 0 0 0 12rpx;
}
.login .tool button:last-child {
	color: #03bd00;
	border-left: 1px solid #d0d1d3;
	border-radius: 0 0 12rpx 0;
}