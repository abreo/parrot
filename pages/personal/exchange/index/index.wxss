.menu {
	margin: 0 29rpx;
	margin-top: 40rpx;
	display: flex;
	justify-content: space-around;
	border-bottom: 1rpx solid #E9E9E9;
	font-size: 30rpx;
	color: #909090;
}
.menu .item {
	position: relative;
	padding-bottom: 14rpx;
}
.menu .active {
	font-size: 38rpx;
	color: #4E4E4E;
}
.menu .border_bottom {
	position: absolute;
	bottom: 0;
	width: 100%;
	height: 4rpx;
	background: #FF6A1F;
	border-radius: 4rpx;
}

.select {
	margin-top: 96rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	font-size: 30rpx;
	color: #4E4E4E;
}
.select image {
	margin-top: 41rpx;
	width: 587rpx;
	height: 70rpx;
}

.classify {
	margin-top: 59rpx;
	display: flex;
	flex-direction: column;
	align-items: center;
	font-size: 30rpx;
	color: #4E4E4E;
}
.classify .list {
	margin-top: 41rpx;
	display: flex;
}
.classify .list .item {
	position: relative;
	width: 167rpx;
	height: 70rpx;
}
.classify .list .item:nth-child(2) {
	margin: 0 43rpx;
}
.classify .list .item .item_img_sel{
	position: absolute;
	width: 167rpx;
	height: 70rpx;
}
.classify .list .item .item_img{
	width: 167rpx;
	height: 70rpx;
}

.exchange_button {
	margin-top: 169rpx;
	display: flex;
	justify-content: center;
}
.exchange_button image {
	width: 652rpx;
	height: 90rpx;
}

.describe {
	margin-top: 54rpx; 
}
.describe .title {
	margin: 0 82rpx;
	font-size: 25rpx;
	color: #F86442;
}
.describe .content {
	margin: 20rpx 82rpx;
	line-height: 35rpx;
	font-size: 25rpx;
}