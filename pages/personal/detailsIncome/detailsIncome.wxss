page {
	background: #F3F3F3;
}
.contain {
	overflow: hidden;
	padding: 0 31rpx 0 25rpx;
	background: #fff;
}
.query {
	display: flex;
	flex-direction: column;
	align-items: flex-end;
	margin-top: 26rpx;
	padding: 0 4rpx;
	font-size: 23rpx;
	color: #B7B7B7;
}
.query image {
	width: 66rpx;
	height: 78rpx;
}

.money {
	margin-top: 8rpx;
	display: flex;
	flex-flow: column wrap;
	align-items: center;
	font-size: 50rpx;
	color: #4E4E4E;
}
.money .surplus {
	margin-top: 32rpx;
	font-size: 20rpx;
	color: #909090;
}

.list {
	margin-top: 48rpx;
	padding-bottom: 25rpx;
}
.list .item {
	display: flex;
	justify-content: space-between;
	padding: 25rpx 0;
}
.list .item .title {
	font-size: 28rpx;
	color: #909090;
}
.list .item .content {
	font-size: 25rpx;
	color: #4E4E4E;
}

.describe {
	margin-top: 20rpx; 
}
.describe .title {
	margin: 0 25rpx;
	font-size: 25rpx;
	color: #F86442;
}
.describe .content {
	margin: 20rpx 25rpx;
	line-height: 35rpx;
	font-size: 25rpx;
}